{
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Launch bot_fusionado.py",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/guti/bot_fusionado.py",
            "console": "integratedTerminal",
            "args": [
                "${workspaceFolder}/guti/config_fusionado.json"
            ]
        },
        {
            "type": "debugpy",
            "request": "launch",
            "name": "Launch log_analyzer",
            "program": "${workspaceFolder}/src/log_analyzer.py",
            "console": "integratedTerminal",
            "args": []
        }
    ]
}